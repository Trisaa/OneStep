<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <RelativeLayout
        android:id="@+id/account_update_edit_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/account_update_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="#DE000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_update_title_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_female_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/female_ic"
                android:foreground="@drawable/common_oval_white_bg" />

            <ImageView
                android:id="@+id/user_male_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@mipmap/male_ic"
                android:foreground="@drawable/common_oval_white_bg" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
