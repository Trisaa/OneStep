<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/route_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/route_map_controller"
        android:layout_below="@id/toolbar" />

    <LinearLayout
        android:id="@id/route_map_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/route_map_day1"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:background="@drawable/common_green_btn_bg"
            android:foreground="@drawable/common_oval_white_bg"
            android:gravity="center"
            android:text="第1天"
            android:textColor="@color/attraction_selected" />

        <TextView
            android:id="@+id/route_map_day2"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:foreground="@drawable/common_oval_white_bg"
            android:gravity="center"
            android:text="第2天"
            android:textColor="@color/attraction_unselected" />

        <TextView
            android:id="@+id/route_map_day3"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:foreground="@drawable/common_oval_white_bg"
            android:gravity="center"
            android:text="第3天"
            android:textColor="@color/attraction_unselected" />

        <TextView
            android:id="@+id/route_map_day4"
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:foreground="@drawable/common_oval_white_bg"
            android:gravity="center"
            android:text="第4天"
            android:textColor="@color/attraction_unselected" />
    </LinearLayout>

</RelativeLayout>